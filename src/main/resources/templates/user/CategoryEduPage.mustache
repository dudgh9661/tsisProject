    width: 120px;
    padding: 10px;
    font-weight: bold;
    vertical-align: top;
    background: #f1f8ff;
}
.divTableCell{
    max-width: 130px;
    min-width: 130px;
    overflow: hidden;
    padding: 6px;
    vertical-align: top;
    float: left;
}
.divTableCell:hover{
    background: #f1f8ff;
}
.divTableCell, .divTableHead {  
